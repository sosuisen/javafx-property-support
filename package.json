{
  "name": "javafx-controller-support",
  "displayName": "JavaFX Controller Support",
  "publisher": "sosuisha",
  "repository": {
    "type": "git",
    "url": "https://github.com/sosuisen/javafx-controller-support"
  },
  "icon": "images/icon.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:fxml"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "redhat.java"
  ],
  "contributes": {
    "commands": [
      {
        "command": "javafx-controller-support.addAllMissingFxIds",
        "title": "JavaFX Controller: Add All Missing @FXML Fields"
      },
      {
        "command": "javafx-controller-support.addInitializeMethod",
        "title": "JavaFX Controller: Add initialize()"
      },
      {
        "command": "javafx-controller-support.generateBuilderClass",
        "title": "JavaFX Controller: Generate Builder Class"
      }
    ],
    "languages": [
      {
        "id": "java",
        "extensions": [
          ".java"
        ],
        "aliases": [
          "Java",
          "java"
        ]
      },
      {
        "id": "fxml",
        "extensions": [
          ".fxml"
        ],
        "aliases": [
          "FXML",
          "fxml"
        ]
      }
    ],
    "codeActions": [
      {
        "language": "java",
        "kind": "quickfix",
        "title": "Add Missing @FXML Fields"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}